<Window x:Class="TypeInfo_Demo.LargeTextBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LargeTextBoxWindow" Height="400" Width="600"
        ResizeMode="CanResizeWithGrip" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="481*"/>
            <ColumnDefinition Width="119*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="largeTextBox" Grid.ColumnSpan="2" VerticalAlignment="Stretch" 
                 HorizontalAlignment="Stretch" TextWrapping="Wrap" AcceptsReturn="True" 
                 IsReadOnly="True" VerticalScrollBarVisibility="Visible" />
    </Grid>
</Window>
